<%= form_for [:admin, @trip] do |form| %>

  <%= form.label :duration %>*
  <br>
  <%= form.text_field :duration, placeholder: "in minutes" %>
  <br>
  <br>

  <%= form.label :start_date %>*
  <br>
  <%= form.date_select :start_date, :prompt => {:year => 'Select Year', :month => 'Select Month', :day => 'Select Day'} %>
  <br>
  <br>
  <%= form.label :end_date %>*
  <br>
  <%= form.date_select :end_date, :prompt => {:year => 'Select Year', :month => 'Select Month', :day => 'Select Day'} %>
  <br>
  <br>
  <%= form.label :start_station_id %>*
  <br>
  <%= form.collection_select :start_station_id, Station.all, :id, :name %>
  <br>
  <br>
  <%= form.label :end_station_id %>*
  <br>
  <%= form.collection_select :end_station_id, Station.all, :id, :name %>
  <br>
  <br>
  <%= form.label :bike_id %>*
  <br>
  <%= form.text_field :bike_id %>
  <br>
  <br>
  <%= form.label :subscription_type %>*
  <br>
  <%= form.select :subscription_type, ["Subscriber", "Customer"] %>
  <br>
  <br>
  <%= form.label :zip_code %>
  <br>
  <%= form.text_field :zip_code %>
  <br>
  <br>
  <%= form.submit %>
<% end %>
<br>
<br>
