<link rel="stylesheet" href="app/stylesheets/nav.css">
<nav>

  <% content_for :visitor do %>
    <div class="user-nav">
  <%= link_to "Log In", login_path %>
    <%= link_to "Create Account", new_user_path %>
    <%= link_to "Trips", trips_path %>
    <%= link_to "Stations", stations_path %>
    <%= link_to "Accessories", accessories_path %>
  </div>
  <% end %>

  <% content_for :user do %>
  <div class="user-nav">
      <% if !current_user.nil? %>
        <%= link_to "Home", root_path %>
        <%= link_to "Account", user_path(current_user) %>
        <%= link_to "Trips", trips_path %>
        <%= link_to "Stations", stations_path %>
        <%= link_to "Accessories", accessories_path %>
        <div class="log-out">

          <%= link_to "Log Out", logout_path %>
        </div>
        <% if !current_user.admin? %>
          <%= "Logged in as: #{current_user.username}" %>
        <% else %>
        <%= link_to "Create New Trip", new_admin_trip_path %>
        <%= link_to "Create New Accesory", admin_bike_shop_accessory_new_path %>
        <div class="welcome-user">

          <%= "Logged in as Admin User: #{current_user.username} "%>
        </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</nav>
