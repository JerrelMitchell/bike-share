<nav>
  <% content_for :visitor do %>
    <%= link_to "Register", new_user_path %>
    <%= link_to "Log In", login_path %>
  <% end %>

  <% content_for :user do %>
    <div class="user-nav">
      <% if !current_user.nil? %>
        <%= link_to "Home", root_path %>
        <%= link_to "Log Out", logout_path %>
        <%= link_to "Account", user_path(current_user) %>
        <%= link_to "Trips", trips_path %>
        <%= link_to "Stations", stations_path %>
        <%= link_to "Accessories", accessories_path %>
        <% if !current_user.admin? %>
          <%= "Logged in as: #{current_user.username}" %>
        <% else %>
          <%= "Logged in as Admin User: #{current_user.username} "%>
          <%= link_to "Create New Trip", new_admin_trip_path %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</nav>
